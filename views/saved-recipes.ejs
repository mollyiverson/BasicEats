<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="stylesheet" href="./css/saved-recipes.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title>Saved Recipes</title>

</head>

<body>
    <%- include('account_header', { admin: user.admin }) %>

    <section id="recipe-details">
        <div class="container-lg">
          <div class="p-lg-2 text-center bg-light">
            <h1>Recipes</h1>
          </div>  
          <table class="table table-hover" id="recipestable">
            <thead>
              <tr>
                <th scope="col">Recipe Name</th>
                <th scope="col">Recipe Details</th>
              </tr>
            </thead>
            <tbody>
              
                <% for (let recipe of recipes) { %>
                <tr>
                  <td><%= recipe.recipename %></td>
                  <td><a href="/recipe_by_id?ID=<%= recipe.recipeid %>">View Details</a></td>
                </tr>
                
              <% } %> 
           
            </tbody>
          </table>
          <%if (!recipes || recipes.length == 0) { %>
            <p> No recipes to list! </p>
            <% } %>
        </div>
    </section>

</body>